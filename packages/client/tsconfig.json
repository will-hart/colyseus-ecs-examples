{
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "strict": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true
  },
  "exclude": ["node_modules", "lib"],
  "include": ["src/**/*.ts"]
}
