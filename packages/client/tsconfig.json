{
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",
    "target": "ES2019",
    "lib": ["es2020"],
    "module": "ES2020",
    "importHelpers": true,
    "declaration": true,
    "strict": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "baseUrl": "."
  },
  "exclude": ["node_modules", "lib"],
  "include": ["src/**/*.ts"]
}
